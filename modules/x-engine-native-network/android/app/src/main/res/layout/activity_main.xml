<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:background="#ffffff">

    <Button
        android:id="@+id/btnGet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="btnGet"
        android:onClick="network"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnGetQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="btnGetQuery"
        android:onClick="network"
        android:visibility="gone"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnPostQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="btnPostQuery"
        android:onClick="network"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnPostBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="btnPostBody"
        android:onClick="network"
        android:textColor="#ffffff" />
    <Button
        android:id="@+id/btnDownLoad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="btnDownLoad"
        android:onClick="network"
        android:textColor="#ffffff" />
    <Button
        android:id="@+id/btnUpLoad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="btnUpLoad"
        android:onClick="network"
        android:textColor="#ffffff" />
    <TextView
        android:id="@+id/tvMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="15dp"
        android:text=""
        />

</LinearLayout>