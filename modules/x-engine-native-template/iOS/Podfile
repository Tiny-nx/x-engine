# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'
 
source 'https://github.com/CocoaPods/Specs.git'

# 在环境变量里指向 x-engine 本地路径
# export X_ENGINE_ROOT=/Users/zk/git/company/working/x-engine

X_ENGINE_ROOT=ENV['X_ENGINE_ROOT'] || '../..'

def shared_pods
  pod 'x-engine-native-core', :path => X_ENGINE_ROOT+'/modules/x-engine-native-core'
  pod 'x-engine-native-protocols', :path => X_ENGINE_ROOT+'/modules/x-engine-native-protocols'
end

target 'xxxx' do
  #use_frameworks!
  shared_pods
end
target 'xxxxTests' do
  #use_frameworks!
  shared_pods
end
target 'xxxxUITests' do
  # Pods for testing
  shared_pods

end
